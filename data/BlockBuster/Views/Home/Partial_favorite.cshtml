@if (Model != -1)
{
    if (ViewBag.check == 1)
    {
        <h class="loginLink"><a href="#" onclick="on()" class="parent-btn"><i class="ion-trash-a"></i> Re - Favorite</a></h>
    }
    else
    {
        <a href="@Url.Action("Add_favorite", "Home", new { id = Model})" class="parent-btn"><i class="ion-heart"></i> Add to Favorite</a>
    }
}
else {; }
<!-- hộp xác nhận -->
<div id="overlay" onclick="off()">
    <div id="box">
        <div style="margin:10px">
            <p style="color:white ; font-size:20px">Do you really want to delete this movie from favorites?</p>
            <a class="item item-1 redbtn" href="@Url.Action("Remove_favorite", "Home", new { id = Model})">confirm</a>
        </div>
    </div>
</div>
<style>
    #overlay {
        position: fixed;
        display: none;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0,0,0,0.9);
        z-index: 2;
        cursor: pointer;
    }

    #box {
        background-color: #233a50;
        position: absolute;
        top: 50%;
        left: 50%;
        font-size: 50px;
        color: white;
        transform: translate(-50%,-50%);
        -ms-transform: translate(-50%,-50%);
        border: 3px solid #0c1c2c;
    }
</style>
<script>
    function on() {
        document.getElementById("overlay").style.display = "block";
    }
    function off() {
        document.getElementById("overlay").style.display = "none";
    }
</script>