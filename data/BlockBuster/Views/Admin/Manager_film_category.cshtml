@{
    ViewBag.Title = "Manager_film_category";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm("Add_category_film", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            <label>Form </label>
            <br />
            <input name="film_id" value=@ViewBag.film_id hidden />
            <select name="category_id">
                @foreach (var item in ViewBag.category)
                {
                    <option value=@item.id>@item.name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Add">
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>Country list of film - id: @ViewBag.film_id </th>
        <th>Image</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.category.name
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete_film_category", new { id = item.id })
            </td>
        </tr>
    }
</table>
<div>
    @Html.ActionLink("Come back", "Detail_film", new { id = ViewBag.film_id })
</div>