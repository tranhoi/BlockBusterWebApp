                                                    <option value="1">-- ☆☆--</option>
                                                    <option value="0">-- ☆--</option>
                                                    break;
                                                case 4:
                                                    <option selected value="4">-- ☆☆☆☆☆ --</option>
                                                    <option value="3">-- ☆☆☆☆--</option>
                                                    <option value="2">-- ☆☆☆--</option>
                                                    <option value="1">-- ☆☆--</option>
                                                    <option value="0">-- ☆--</option>
                                                    break;
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="col-md-12 ">
                                    <input class="submit" type="submit" value="submit">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
