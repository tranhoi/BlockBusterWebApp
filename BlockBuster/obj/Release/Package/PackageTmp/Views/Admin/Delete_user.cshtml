@{
    ViewBag.Title = "Delete_user";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div>
    <div id="overlay">
        <div style="background-color:#0f2133; position:center" id="noti_box">
            <div class="row" style="margin:40px">
                <p style="color:white">Do you really want to delete this?</p>
                <div style="margin:20px">
                    <p>User</p>
                    <p>Id: @Model.id</p>
                    <p>Name: @Model.first_name @Model.last_name</p>
                </div>
                <div style="margin-top:2em; float:right">
                    <a style="margin:1.5em" href="@Url.Action("Delete_user_confirm", "Admin", new { id = Model.id})">Confirm</a>
                    <a style="margin-right:0.5em" href="@Url.Action("List_users", "Admin")">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    p {
        color: teal
    }
</style>