@model IEnumerable<BlockBuster.Models.admin>
@{
    ViewBag.Title = "Admins";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@if (ViewBag.Notification == "empty")
{
    <div class="alert">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        The account you requested was not found.
    </div>
}
@using (Html.BeginForm())
{
    <div>
        <input type="text" name="txtKey" placeholder="Enter your keyword">
        <button type="submit"><i class="fa fa-search"></i></button>
        <p style="color:#FF6600; font-style:italic">(*) You can search by name or email.</p>
    </div>
}
<hr />
<h2>Admin Managemen</h2>
<p>
    @Html.ActionLink("Create new admin", "Create_admin", "Admin")
</p>
<hr />
<table class="table">
    <tr>
        <th style="width:10%">Name</th>
        <th style="width:10%">Username</th>
        <th style="width:10%">Password</th>
        <th style="width:10%">Position</th>
        <th style="width:10%"></th>
        <th style="width:50%"></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.position.name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit_admin", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete_admin", new { id = item.id }) |
            </td>
        </tr>
    }
</table>
<div>
    @Html.ActionLink("Back to home", "Home")
</div>
<script>
    function on() {
        var x = document.getElementById("myDIV");
        x.style.display = "block";
    }
    function off() {
        var x = document.getElementById("myDIV");
        x.style.display = "none";
    }
</script>