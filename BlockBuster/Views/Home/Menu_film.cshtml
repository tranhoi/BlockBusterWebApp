@foreach (var items in Model)
{
    <li class="dropdown first">
        <a class="btn btn-default dropdown-toggle lv1" data-toggle="dropdown" data-hover="dropdown">
            @items.name <i class="fa fa-angle-down" aria-hidden="true"></i>
        </a>
        <ul class="dropdown-menu level1">
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown">genres<i class="ion-ios-arrow-forward"></i></a>
                @Html.Action("Menu_category", "Home", new { id = items.id })
            </li>
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown">countries<i class="ion-ios-arrow-forward"></i></a>
                @Html.Action("Menu_country", "Home", new { id = items.id })
            </li>
            <li class="it-last"><a href="@Url.Action("film_list", "Home", new { form_id = items.id , sort = 0, cate_id = 0 , coun_id = 0 , rate = 0 })">View all</a></li>
        </ul>
    </li>
}
