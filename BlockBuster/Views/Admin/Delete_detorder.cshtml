@model BeanStore.Models.det_order
@{
    ViewBag.Title = "Delete_detorder";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h3>Are you sure you want to delete this order details?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Order id
        </dt>

        <dd>
            @Html.DisplayFor(model => model.order_id)
        </dd>

        <dt>
            id
        </dt>

        <dd>
            @Html.DisplayFor(model => model.id)
        </dd>

        <dt>
            Product
        </dt>

        <dd>
            @Html.DisplayFor(model => model.item.name)
        </dd>

        <dt>
            Quantity
        </dt>

        <dd>
            @Html.DisplayFor(model => model.quantity)
        </dd>
        <dt>
            Amount
        </dt>

        <dd>
            @Html.DisplayFor(model => model.amount)
        </dd>
    </dl>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Details_Order", new { id = ViewBag.detor_id })
        </div>
    }
