@model BeanStore.Models.order

@{
    ViewBag.Title = "Delete_order";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@if (ViewBag.Notification != null)
{
<div class="alert">
    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
    <strong>Error!</strong> @ViewBag.Notification.
    <a style="color:black" href="@Url.Action("Details_Order", new { id = Model.id })"> Do you want to do it now ?</a>
</div>
}
<h3 style="color:#FF6600">Are you sure you want to delete this order?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Id
        </dt>
        <dd>
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt>
            Customer
        </dt>
        <dd>
            @Html.DisplayFor(model => model.user.name)
        </dd>
        <dt>
            Total Price
        </dt>
        <dd>
            @Html.Action("Total_price", "Admin", new { id = Model.id })
        </dd>
        <dt>
            Status
        </dt>
        <dd>
            @Html.DisplayFor(model => model.status.name)
        </dd>
    </dl>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Orders")
        </div>
    }
</div>